<%= form_for(record) do |f| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "enter a title" %><br>
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: "summarise the day" %><br>
    <%= f.label :gratitude %>
    <%= f.text_field :gratitude, placeholder: "what should you be grateful for today?" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
